<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/item_f_way"
        android:layout_width="25dp"
        android:layout_height="75dp"
        android:layout_marginStart="100dp"
        tools:ignore="ContentDescription" />

    <ImageView
        android:id="@+id/item_f_bus_0"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_alignBottom="@+id/item_f_way"
        android:layout_alignEnd="@+id/item_f_way"
        tools:ignore="ContentDescription" />

    <ImageView
        android:id="@+id/item_f_bus_1"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_alignEnd="@+id/item_f_way"
        android:layout_centerVertical="true"
        tools:ignore="ContentDescription" />

    <TextView
        android:id="@+id/item_f_staNm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginStart="10dp"
        android:layout_toEndOf="@+id/item_f_way"
        android:text="@string/sample" />

</RelativeLayout>

