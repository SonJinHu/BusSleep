<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    app:layout_collapseMode="parallax"
    app:layout_collapseParallaxMultiplier="0.5">

    <TextView
        android:id="@+id/d_include_tv_routeTp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="RouteType"
        tools:ignore="HardcodedText" />

    <TextView
        android:id="@+id/d_include_tv_routeNo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="RouteNo"
        android:textSize="25sp"
        android:textStyle="bold"
        tools:ignore="HardcodedText" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/d_include_tv_staNm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="staNodeNm"
            tools:ignore="HardcodedText" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="â†”"
            tools:ignore="HardcodedText" />

        <TextView
            android:id="@+id/d_include_tv_endNm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="endNodeNm"
            tools:ignore="HardcodedText" />

    </LinearLayout>

</LinearLayout>